/* 搜一搜 */
.search-box{
  background-color: #950000;
  height: 100rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search-box > image:first-child{
  width: 14px;
  position: absolute;
  left: 60rpx;
}
.search-box > image:last-child{
  width: 40rpx;
  padding: 10rpx;
  position: absolute;
  z-index: 4;
  right: 60rpx;
}
.search-box > input{
  width: 680rpx;
  height: 60rpx;
  border-radius: 30rpx;
  box-sizing: border-box;
  padding: 0 64rpx;
  font-size: 32rpx;
  line-height: 32rpx;
  font-weight: 600;
  background-color: #f5f5f5;
}
.container{
  height: calc(100vh - 100rpx);
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.left-box{
  width: 160rpx;
  height: 100%;
  border-right: 1rpx solid #efefef;
  position: relative;
  display: flex;
  flex-direction: column;
}
.scroll-box{
  transition: all 0.5s;
  position: absolute;
  left: 0;
  top: 0;
  height: 90rpx;
  width: 6rpx;
  background-color: #950000;
}
.left-box view{
  height: 90rpx;
  font-size: 34rpx;
  line-height: 90rpx;
  text-align: center;
}
.actiCl{
  color: #950000;
  font-weight: bold;
}

.right-box{
  flex: 1;
  height: 100%;
}
.shop-box{
  display: flex;
  flex-wrap: wrap;
}
.shop-item{
  width: 28%;
  margin: 0 calc((100% - 28% * 3) / 6);
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}
.shop-item > image{
  width: 100%;
}
.shop-item > text{
  margin-top: 10rpx;
  font-size: 30rpx;
  line-height: 30rpx;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}