
.shop-null{
  text-align: center;
  font-size: 40rpx;
  line-height: 40rpx;
  margin-top: 40rpx;
  font-weight: bold;
  font-family: "仿宋";
}

.shop-box{
  /* background-color: blanchedalmond; */
  padding-bottom: 90rpx;
}

.shop-item{
  overflow: hidden;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  background-color: blanchedalmond;
}
.shop-item > image{
  margin: 10rpx;
  width: 150rpx;
  height: 150rpx;
}
.infos-box{
  height: calc(150rpx + 10rpx * 2);
  flex: 1;
  display: flex;
  justify-content: space-between;
}
.info-box{
  padding: 15rpx 0;
  box-sizing: border-box;
  height: 100%;
  flex: 1;
}
.info-box > view:nth-child(1){
  font-size: 36rpx;
  line-height: 36rpx;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 400rpx;
}
.info-box > view:nth-child(2){
  font-size: 32rpx;
  line-height: 32rpx;
  margin-top: 5rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 300rpx;
}
.info-box > view:nth-child(3){
  font-size: 30rpx;
  line-height: 30rpx;
  display: flex;
  flex-direction: column;
}
.info-box > view:nth-child(3) > view  > text{
  color: red;
  font-weight: bold;
}
.info-box > view:nth-child(3){
  margin-top: 5rpx;
}
.num-box{
  border: 1rpx solid #cdcdcd;
  width: 90rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
}
.num-box > view{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  line-height: 40rpx;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  border: 1rpx solid #cdcdcd;
  background-color: #f0f0f0;
}
.num-box > input{
  width: 100%;
  box-sizing: border-box;
  border: 1rpx solid #cdcdcd;
  text-align: center;
  padding: 0 5rpx;
  font-size: 36rpx;
  line-height: 36rpx;
}
.clear-item{
  width: 140rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgb(78, 17, 17);
  font-size: 30rpx;
  line-height: 30rpx;
  color: white;
}

.total-box{
  position: fixed;
  z-index: 2009;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  height: 100rpx;
  width: 100%;
  text-align: center;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.total-box > view:nth-child(1){
  font-size: 36rpx;
  line-height: 36rpx;
  padding: 0 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.total-box > view:nth-child(1) > text{
  color: red;
  font-size: 40rpx;
  font-weight: bold;
}
.total-box > view:nth-child(2){
  height: 100%;
  width: 300rpx;
  background-color: tomato;
  color: white;
  font-size: 40rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}