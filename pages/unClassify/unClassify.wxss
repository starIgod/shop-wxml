.pos-box{
  width: 100%;
  position: fixed;
  z-index: 99;
  top: 0;
  left: 0;
}
.top-bar{
  background-color: #950000;
  height: 120rpx;
  padding: 0 24rpx;
  padding-top: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.top-bar > view,
.top-bar > image{
  width: 36rpx;
}
.top-bar > text{
  flex: 1;
  text-align: center;
  color: white;
  font-size: 36rpx;
  line-height: 36rpx;
}

.select-box{
  background-color: white;
  width: 100%;
  z-index: 90;
  display: flex;
  align-items: center;
  box-shadow: 0 1rpx 5rpx #adadad;
}
.select-box > view{
  padding: 20rpx 30rpx;
  position: relative;
}
.actSub::after{
  content: '';
  display: block;
  position: absolute;
  width: 100%;
  height: 10rpx;
  bottom: 0;
  left: 0;
  background-color: #950000;
}

.container{
  height: calc(100vh - 100rpx);
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.left-box{
  width: 160rpx;
  height: 100%;
  border-right: 1rpx solid #efefef;
  position: relative;
  display: flex;
  flex-direction: column;
}
.scroll-box{
  transition: all 0.5s;
  position: absolute;
  left: 0;
  top: 0;
  height: 90rpx;
  width: 6rpx;
  background-color: #950000;
}
.left-box view{
  height: 90rpx;
  font-size: 34rpx;
  line-height: 90rpx;
  text-align: center;
}
.actiCl{
  color: #950000;
  font-weight: bold;
}

.right-box{
  flex: 1;
  height: 100%;
}
.shop-box{
  display: flex;
  flex-wrap: wrap;
}
.shop-item{
  width: 28%;
  margin: 0 calc((100% - 28% * 2) / (2 * 2));
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}
.shop-item > image{
  width: 100%;
}
.shop-item > text{
  margin-top: 10rpx;
  font-size: 30rpx;
  line-height: 30rpx;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}