

/* 分割块 */
.hr-box{
  height: 10rpx;
  background-color: #ededed;
}
/* 地区 */
.regions-box{
  box-sizing: border-box;
  height: 120rpx;
  background-color: #ffffff;
  padding: 15rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.regions-box > view{
  height: 100%;
  display: flex; 
  flex-direction: column;
  justify-content: space-around;
  font-weight: bold;
  font-size: 34rpx;
  line-height: 34rpx;
}
.regions-box > view > text{
  max-width: 550rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.regions-box > image{
  width: 40rpx;
}
/* 搜一搜 */
.search-box{
  background-color: #950000;
  height: 100rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search-box > image:first-child{
  width: 14px;
  position: absolute;
  left: 60rpx;
}
.search-box > image:last-child{
  width: 40rpx;
  padding: 10rpx;
  position: absolute;
  z-index: 4;
  right: 60rpx;
}
.search-box > input{
  width: 680rpx;
  height: 60rpx;
  border-radius: 30rpx;
  box-sizing: border-box;
  padding: 0 64rpx;
  font-size: 32rpx;
  line-height: 32rpx;
  font-weight: 600;
  background-color: #f5f5f5;
}
/* 轮播图 */
.swiper-box image{
  height: 352rpx !important;
}
/* 商品分类 */
.home-categ{
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-around;
}
.home-categ > view{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.home-categ > view > image{
  width: 90%;
}
.home-categ > view > text{
  font-size: 30rpx;
  line-height: 30rpx;
  margin-top: 20rpx;
}
/* 热销 */
.hot-box > view:nth-child(1){
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
  border-bottom: 1rpx solid #efefef;
  font-size: 34rpx;
  line-height: 34rpx;
  padding: 0 30rpx;
}
.hot-item{
  padding: 20rpx;
  display: flex;
}
.hot-item:not(:last-child){
  border-bottom: 1rpx solid #efefef;
}
.hot-item > image{
  width: 150rpx;
}
.hot-item > view{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 28rpx;
  line-height: 28rpx;
}
.hot-item > view > view{
  display: flex;
  flex-direction: column;
}
.hot-item > view text:nth-child(1){
  font-size: 34rpx;
  line-height: 34rpx;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: 10rpx;
}
.hot-item > view text:nth-child(2){
  margin-top: 10rpx;
  color: #868686;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.hot-item > view > text{
  font-size: 32rpx;
  color: #a52525 !important;
  margin-bottom: 10rpx;
}
/* 悬浮球 */
.fixed-box{
  position: fixed;
  bottom: 40rpx;
  right: 20rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #7f7f7f;
  display: flex;
  align-items: center;
  justify-content: center;
}
.fixed-box > image{
  width: 50rpx;
}